# OpenCart .gitignore - UPDATED FOR FULL FUNCTIONALITY

# Development documentation and reports
cursor/

# Cache and logs (but keep structure)
system/storage/cache/*
system/storage/logs/*
system/storage/download/*
system/storage/upload/*
system/storage/modification/*
image/cache/*
image/catalog/*

# IDE and editor files
.idea/
.vscode/
*.sublime-project
*.sublime-workspace
.DS_Store
Thumbs.db

# Temporary files
*.tmp
*.temp
*.log
*.cache

# Backup files
*.bak
*.backup
*.save
*.old

# Development files
*.dev.php
*.local.php
config.dev.php
config.local.php
php.ini

# Test files
test.php
test_*.php
debug_*.php
adminer.php

# SASS/CSS cache
templ/.sass-cache/
templ/css/.sass-cache/
*.css.map

# Node modules (if using build tools)
node_modules/
npm-debug.log
yarn-error.log

# Environment files
.env
.env.local
.env.production

# Database dumps
*.sql
*.sql.gz

# SSL certificates
*.pem
*.key
*.crt

# Keep empty directories
!system/storage/cache/.gitkeep
!system/storage/logs/.gitkeep
!system/storage/download/.gitkeep
!system/storage/upload/.gitkeep
!system/storage/modification/.gitkeep
!image/cache/.gitkeep
!image/catalog/.gitkeep

# IMPORTANT: Include all OpenCart core files for full functionality
# These files are essential for the site to work
!system/engine/
!system/library/
!system/helper/
!system/startup.php
!system/modification.xml
!system/smsgate/
!system/startup.php

# Include all template and theme files
!catalog/view/theme/
!admin/view/template/

# Include all image assets
!image/
!image/data/
!image/flags/
!image/fonts/
!image/langmark/
!image/payment/
!image/templates/

# Include all catalog files
!catalog/controller/
!catalog/language/
!catalog/model/
!catalog/view/

# Include all admin files
!admin/controller/
!admin/language/
!admin/model/
!admin/view/

# Include all system files
!system/library/dompdf/
!system/library/agoo/
!system/library/cache/
!system/library/db/
!system/library/export_import/
!system/library/image/
!system/library/openbay/
!system/library/parser/
!system/library/sc/
!system/library/template/

# Include all essential PHP files
!*.php
!admin/*.php
!catalog/*.php
!system/*.php

# Include all essential configuration files (but not sensitive ones)
!config.php
!admin/config.php
!catalog/config.php
!system/config/config.php

# Include all essential template files
!templ/
!templ/css/
!templ/js/
!templ/images/

# Include all essential documentation
!README*
!LICENSE*
!CHANGELOG*
!INSTALL*
!UPGRADE*

# Include all essential assets
!logo.*
!favicon.*
!robots.txt
!sitemap.xml
!crossdomain.xml
!google*.html

# Include all essential modules
!pdf/
!seoshield-client/
!migrate/
!modification/
!emails_img/